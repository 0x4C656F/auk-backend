
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  fullname  String  
  password  String
  role      Role     @default(STUDENT)
  posts     Post[]
  pins      Pin[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id          Int      @id @default(autoincrement())
  heading     String
  subheading  String
  content     String
  published   Boolean  @default(false)
  tags        Tag[]
  pin         Pin?
  author      User?    @relation(fields: [authorId], references: [id])
  authorId    Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Pin {
  id        Int       @id @default(autoincrement())
  post      Post      @relation(fields: [postId], references: [id])
  postId    Int       @unique
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  pinnedAt  DateTime  @default(now())
  unpinAt   DateTime?
}

enum Tag {
  Technology
  Event
  Lifestyle
  Announcement
  Research
  Achievement
  Career
  Internship
  News
  StudentLife
  Discussion
  Question
}

enum Role {
  ADMIN
  STUDENT
  TEACHER
}